                <h3>
                    <%= user.firstName +" "+ user.lastName %></h3>
            </div>  

            <div class=" thumbnail">
                        <img src="<%= user.avatar %>" alt="">

                        <div class="caption">
                            <h4><a href="mailto:<%= user.email %>">
                                    <%=user.email%>
                                </a></h4>
                        </div>

                        <div>
                            <a class="btn btn-primary" href="/follow/<%= user._id %>">Follow</a>
                        </div>

            </div>

