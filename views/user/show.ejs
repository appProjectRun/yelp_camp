        <div class="col-md-5">
            <div class="container">
                <h3>
                    <%= user.firstName%>'s campgrounds.
                </h3>
                <ul>
                    <% campground.forEach(function(eachCampground){ %>
                        <li> <a href="/campgrounds/<%=eachCampground._id%>">
                                <%= eachCampground.name %>
                            </a> </li>
                        <% }); %>
                </ul>
            </div>
        </div>

        <div class="col-md-3">
            <div class="container">
                <h3>
                    <%= user.firstName%>'s follower.
                </h3>
                <ul>
                    <% user.followers.forEach(function(eachFollower){ %>
                        <li>                            
